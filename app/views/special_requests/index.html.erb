<div class="container list-nav">
  <%= form_tag special_requests_path, method: :get do %>
               <div class="searchcontentforme">
             <%= select_tag 'query[categorie]', options_for_select(SpecialRequest::CATEGORIES) %>
            </div>
          <%= submit_tag "Rechercher", class: "btn btn-search" %>
          <%= link_to "ðŸ…§", special_requests_path %>

  <% end %>
  <% @special_requests.each do |special_request| %>
  <div class="line_confirmation"></div>
