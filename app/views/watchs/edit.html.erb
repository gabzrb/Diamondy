<div class="container">
  <div class="row">
    <div class=" col col-xs-12 col-lg-12">
      <div class="contactcard text-center">
        <h3>Montre⌚️</h3>
        <%= simple_form_for([@product, @watch]) do |f| %>
        <%= f.error_notification %>
        <div class="form-row">
          <div class="col-xs-12 col-md-6">
            <%= f.input :state, collection: Watch::STATES %>
          </div>
          <div class="col-xs-12 col-md-6">
            <%= f.input :brand, collection: Watch::BRANDS %>
          </div>
          <div class="col-xs-12 col-md-6">
            <%= f.input :model %>
          </div>
          <div class="col-xs-12 col-md-6">
            <%= f.input :year, min:1800 , max: 2020 %>
          </div>
          <div class="col-xs-12 col-md-12">
            <%= f.input :material, collection: Watch::MATERIALS %>
          </div>
          <div  class="form-actions col-xs-12 col-md-6">
            <%= f.submit "Valider", class: "btn-contact" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
