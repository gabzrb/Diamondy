<div class="media med-dash-nav">
  <div class="container dash-nav">
    <div class="row">
      <div class="col-md-8 col-sm-12">
        <%  if current_user.photo.url %>
        <%= cl_image_tag current_user.photo, class:"mr-3 img-nav-dash", crop: :fill %>
        <% else %>
        <%= image_tag "logo.png", class:"mr-3 img-nav-dash" %>
        <% end %>
        <div class="media-body">
          <h5 class="mt-0"><%= current_user.company_name %></h5>
          <%= current_user.services_description %>
        </div>
      </div>
      <div class="col-md-4 col-sm-12 navdash-b">
        <%= link_to 'Ajouter un produit',new_product_path, class: "btn btn-home" %>
      </div>
    </div>
  </div>
</div>

<div class="container list-nav">
  <h3>Mes Produits en ligne (<%= current_user.products.count %>)</h3>
    <% current_user.products.each do |product| %>
      <div class="card-trip">
          <% if product.photo.url %>
          <%= cl_image_tag product.photo %>
          <% else %>
          <%= image_tag "https://i.ibb.co/cYPRmcc/diamondproduct.jpg" %>
          <% end %>
          <div class="card-trip-infos">
            <div>
          <h2><%= product.element %></h2>
          <p><%= product.description %>.</p>
        </div>
          <div>
           <%= link_to 'Voir Produit',products_path, class: "btn btn-contact" %>
           </div>

         <h2 class="card-trip-pricing"> <%= product.price %>â‚¬</h2>
      <% if product.user.photo.url %>
      <%= cl_image_tag product.user.photo, class:"card-trip-user avatar-bordered"  %>
      <% else %>
     <img src="https://i.ibb.co/mhL9zjd/user.png" class="card-trip-user avatar-bordered">
    <% end %>
      </div>
</div>

<% end %>
</div>


