<div class="navbar-wagon">
  <% @instance_user = User.new %>
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
  <%= image_tag "logo.png", height: 50 %>
  <% end %>
  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <%= link_to 'Acceuil', root_path, class: " navbar-wagon-item navbar-wagon-link" %>
    <%= link_to 'Passer une annonce', new_annonce_path, class: " navbar-wagon-item navbar-wagon-link" %>
    <%= link_to 'Consulter une annonce', new_annonce_path, class: " navbar-wagon-item navbar-wagon-link" %>
    <%= link_to 'Produits disponibles', products_path, class: " navbar-wagon-item navbar-wagon-link" %>
    <%= link_to 'Contactez-nous', root_path, class: " navbar-wagon-item navbar-wagon-link" %>
    <% unless user_signed_in?
    %>
    <%= link_to 'Inscription', new_user_registration_path, class: " navbar-wagon-item navbar-wagon-link" %>
    <%= render 'shared/modal_sign_in' %>
    <% end %>
    <!-- Profile picture with dropdown list -->
    <% if  user_signed_in? %>
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <%  if current_user.photo.url %>
        <%= cl_image_tag current_user.photo, class:"avatar dropdown-toggle", id:"navbar-wagon-menu", "data-toggle":"dropdown"  %>
        <% else %>
        <img src="https://i.ibb.co/mhL9zjd/user.png" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
        <% end %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <% if current_user.admin %>
          <li><%= link_to 'Administrateur', admin_path %></li>
          <% end %>
          <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
          <li><%= link_to 'Mon Profile', dashboard_path %></li>
          <li>  <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Se dÃ©connecter") %> <% end %></li>
        </ul>
      </div>
    </div>
    <% end %>
  </div>
  <!-- Dropdown appearing on mobile only -->
</div>
