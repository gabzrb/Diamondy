<div class="banner-product" style="background-image:
  url(https://i.ibb.co/CK3m8MB/product-banner.png);">
</div>
<div class="bluewrapper2">
    <h3>Diamants</h3>
    <h5 class="text-center"> Sed (saepe enim redeo ad Scipionem, cuius omnis sermo erat de amici</h5>
</div>


  <%= form_tag stones_path, method: :get do %>


    <div class="row-diamond">


         <div class="col-xs-12 col-md-4">
          <div class="forme-groupe">
            <h6 style="margin-bottom: 7%"> Forme </h6>
            <%= select_tag 'query[shape]', options_for_select(['Tous',Stone::SHAPES].flatten) %>
          </div>
         </div>


        <div class="col-xs-12 col-md-4">
           <h6 style="margin-bottom: 7%"> Poids Carat </h6>
           <input type=number step=0.01 name=query[weight_from] />
           <input type=number step=0.01 name=query[weight_to] />
       </div>


      <div class="col-xs-12 col-md-4">
        <div class="color-groupe">
        <h6 style="margin-bottom: 7%"> Couleur  </h6>
        <%= select_tag 'query[color_from]', options_for_select(Stone::COLORS, 'D') %>
        <%= select_tag 'query[color_to]', options_for_select(Stone::COLORS, 'MZ') %>
        </div>
      </div>


          <div class="col-xs-12 col-md-4">
            <div class="purity-groupe">
             <h6 style="margin-bottom: 7%"> Puret√© </h6>
            <%= select_tag 'query[purity_from]', options_for_select(Stone::PURITY, 'IF-LC') %>
            <%= select_tag 'query[purity_to]', options_for_select(Stone::PURITY, 'P3') %>
           </div>
          </div>


        <div class="col-xs-12 col-md-4">
          <div class="taille-groupe">
            <h6 style="margin-bottom: 7%"> Taille </h6>
            <%= select_tag 'query[size_from]', options_for_select(Stone::QUALIFICATIONS, 'Fair') %>
            <%= select_tag 'query[size_to]', options_for_select(Stone::QUALIFICATIONS, 'Excellent') %>
          </div>
        </div>

          <div class="col-xs-12 col-md-4">
            <div class="symetry-groupe">
             <h6 style="margin-bottom: 7%"> Symetrie </h6>
            <%= select_tag 'query[symetry_from]', options_for_select(Stone::QUALIFICATIONS, 'Fair') %>
            <%= select_tag 'query[symetry_to]', options_for_select(Stone::QUALIFICATIONS, 'Excellent') %>
           </div>
         </div>

      <div class="col-xs-12 col-md-4">
          <h6 style="margin-bottom: 7%"> Fluorescence </h6>
          <%= select_tag 'query[fluo]', options_for_select(['Tous',Stone::FLUO].flatten) %>
      </div>

         <div class="col-xs-12 col-md-4">
           <h6 style="margin-bottom: 7%"> Polish </h6>
            <%= select_tag 'query[polish_from]', options_for_select(Stone::QUALIFICATIONS, 'Fair') %>
            <%= select_tag 'query[polish_to]', options_for_select(Stone::QUALIFICATIONS, 'Excellent') %>
          </div>

        <div class="col-xs-12 col-md-4">
          <h6 style="margin-bottom: 7%"> Certificat </h6>
          <%= select_tag 'query[certificate]', options_for_select(['Tous',Stone::CERTIFICATES].flatten) %>
        </div>

     </div>
          <div class="searchbouton text-center">
                  <%= submit_tag "Rechercher", class: "btn btn-search text-center" %>
                  <%= link_to "üÖß", stones_path %>
            </div>
<% end %>


<div class="line_confirmation"></div>

  <% @stones.each do |stone| %>
<div class="card-trial">
  <div class="card-trial-elements">
    <% if stone.product.product_attachments.first %>
    <img src= <%= stone.product.product_attachments.first.photo.url %> >
    <% else %>
    <%= image_tag "diamant-brillant.jpg" %>
    <% end %>

        <p><%= stone.shape %></p>
        <p><%= stone.color %></p>
        <p><%= stone.purity %></p>
        <p><%=stone.weight%> </p>
        <p > <%= stone.product.price.to_i %> euros</p>
      </div>

       <div class=" text-center">
        <%= link_to 'DESCRIPTION',stone_path(stone), class: "btn btn-description text-center" %>
      </div>
      </div>


    </div>
  </div>
  <% end %>
<%= render 'shared/footer' %>
