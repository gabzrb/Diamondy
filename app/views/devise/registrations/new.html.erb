
<div class="container margin-top">
<h2>Créer Votre Profile</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">

   <div class="col-xs-12 col-md-6">
    <%= f.input :company_name,
                 required: true,
                 label: false,
                 placeholder: "Nom de société"  %>
   </div>

      <div class="col-xs-12 col-md-6">
    <%= f.input :email,
                required: true,
                label: false,
                autofocus: true,
                  placeholder: "Email",
                input_html: { autocomplete: "email" }%>
     </div>


   <div class="col-xs-12 col-md-6">
    <%= f.input :address,
                 required: true,
                 label: false,
                 placeholder: "Adresse"  %>
   </div>

   <div class="col-xs-12 col-md-6">
    <%= f.input :password,
                required: true,
                  placeholder: "Mot de passe",
                label: false,

                input_html: { autocomplete: "new-password" } %>
    </div>

     <div class="col-xs-12 col-md-6">
     <%= f.input :siret_no,
                 required: true,
                 label: false,
                 placeholder: "Numero de SIRET"  %>
    </div>

   <div class="col-xs-12 col-md-6">
      <%= f.input :password_confirmation,
                required: true,
                  placeholder: "Confirmation du mot de passe",
                label: false,
                input_html: { autocomplete: "new-password" } %>
   </div>

      <div class="col-xs-12 col-md-6">
     <%= f.input :services_description,
          required: true,
          label: false,
           placeholder: "Description service (3OO lettres)"
        %>
      </div>

      <%= f.input :photo,
          required: true,
          label: false,
           placeholder: " Ajouter image de profil"
        %>
   </div>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, "Valider", class: "btn-validation" %>
  </div>
<% end %>
</div>

