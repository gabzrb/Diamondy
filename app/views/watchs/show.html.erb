<div class="container">
  <div class="row">
    <div class=" col col-xs-12 col-lg-12">
      <div class="card-showproduct">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <% if @photos[0] %>
              <%= cl_image_tag @photos[0], class: "d-block w-30"  %>
              <% else %>
      <img src="https://i.ibb.co/hDb2xdp/pixel-bee-u8is-JQ6-Qj-F4-unsplash.jpg" >
              <% end %>
            </div>
            <% @photos.each_with_index do |photo, i|  %>
            <% next if i == 0 %>
            <div class="carousel-item">
              <%= cl_image_tag photo, class: "d-block w-30" %>
            </div>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <div class="card-showproduct-infos">
          <h1><%= @watch.product.description  %></h1>
          <div class="line_confirmation"></div>
          <div class="element-infos">
            <h2>Catégorie: <br> <%= @watch.brand %></h2>
            <h2>Etat:  <br> <%= @watch.state  %></h2>
            <h2>Model: <br> <%= @watch.model  %></h2>
            <h2>Année: <br> <%= @watch.year  %></h2>
            <h2>Matériel: <br> <%= @watch.material  %></h2>
          </div>
          <h2 class="price-product"><%= @watch.product.price.to_i %>€</h2>
          <%= link_to 'Fiche Marchand',user_path(@watch.product.user), class: "btn btn-contact" %>
        </div>
      </div>
    </div>
  </div>
</div>
