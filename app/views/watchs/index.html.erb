<div class="container list-nav">
    <%= form_tag watchs_path, method: :get do %>
    <div class="border-tag">
       <div class="cardcategory">
         <div class="searchcategory">
          <div class="searchtitle">
            <h6> Etat  </h6>
          </div>
             <div class="searchcontent">
              <%= select_tag 'query[state]', options_for_select(Watch::STATES) %>
            </div>
          </div>



          <div class="searchcategory">
            <div class="searchtitle">
              <h6> Marque  </h6>
            </div>
            <div class="searchcontent">
              <%= select_tag 'query[brand]', options_for_select(Watch::BRANDS) %>
            </div>
          </div>

           <div class="searchcategory">
              <div class="searchtitle">
                    <h6> Mat√©riaux </h6>
              </div>

               <div class="searchcontent">
                  <%= select_tag 'query[material]', options_for_select(Watch::MATERIALS) %>
               </div>
           </div>
      </div>

      <div class="searchbouton">
          <%= submit_tag "Rechercher", class: "btn btn-search" %>
          <%= link_to "üÖß", watchs_path %>
      </div>

    </div>
  <% end %>
  <% @watchs.each do |watch| %>
  <div class="line_confirmation"></div>
  <div class="card-trip">
   <% if watch.product.product_attachments.first %>
       <img src= <%= watch.product.product_attachments.first.photo.url %> >
   <% else %>
      <img src="https://i.ibb.co/hDb2xdp/pixel-bee-u8is-JQ6-Qj-F4-unsplash.jpg" >
    <% end %>
    <div class="card-trip-infos">
      <div>
        <h2> <%= watch.brand %></h2>
        <p><%= watch.product.description %></p>
      </div>
      <div >
        <%= link_to 'Voir Produit',watch_path(watch), class: "btn btn-contact" %>
      </div>
      <h2 class="card-trip-pricing"> <%= watch.product.price.to_i %>‚Ç¨</h2>
      <% if watch.product.user.photo.url %>
      <%= cl_image_tag watch.product.user.photo, class:"card-trip-user avatar-bordered"  %>
      <% else %>
      <img src="https://i.ibb.co/mhL9zjd/user.png" class="card-trip-user avatar-bordered">
      <% end %>
    </div>
  </div>
  <% end %>
</div>
