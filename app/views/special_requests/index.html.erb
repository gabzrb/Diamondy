      </div>
      <div >
        <%= link_to 'Voir Produit',special_request_path(special_request), class: "btn btn-card-trip" %>
      </div>
      <h2 class="card-trip-pricing"> <%= special_request.product.price.to_i %>â‚¬</h2>
      <% if special_request.product.user.photo.url %>
      <%= cl_image_tag special_request.product.user.photo, class:"card-trip-user avatar-bordered"  %>
      <% else %>
      <img src="https://i.ibb.co/mhL9zjd/user.png" class="card-trip-user avatar-bordered">
