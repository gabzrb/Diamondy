<div class="container list-nav">
  <% @stones.each do |stone| %>
  <div class="line_confirmation"></div>
  <div class="card-trip">
    <img src= <%= stone.product.photo  %> >
    <div class="card-trip-infos">
      <div>
        <h2> <%= stone.category %></h2>
        <p><%= stone.product.description %></p>
      </div>
      <div >
        <%= link_to 'Voir Produit',stone_path(stone), class: "btn btn-contact" %>
      </div>
      <h2 class="card-trip-pricing"> <%= stone.product.price %>â‚¬</h2>
      <% if stone.product.user.photo.url %>
      <%= cl_image_tag stone.product.user.photo.photo, class:"card-trip-user avatar-bordered"  %>
      <% else %>
      <img src="https://i.ibb.co/mhL9zjd/user.png" class="card-trip-user avatar-bordered">
      <% end %>
    </div>
  </div>
  <% end %>
</div>
