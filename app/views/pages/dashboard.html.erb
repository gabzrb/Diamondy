<div class="media med-dash-nav">
  <div class="container dash-nav">
    <div class="row">
      <div class="col-md-8 col-sm-12">
        <%  if current_user.photo.url %>
        <%= cl_image_tag current_user.photo, class:"mr-3 img-nav-dash", crop: :fill %>
        <% else %>
        <%= image_tag "logo.png", class:"mr-3 img-nav-dash" %>
        <% end %>
        <div class="media-body">
          <h5 class="mt-0"><%= current_user.company_name %></h5>
          <h5>     <%= current_user.services_description %>  </h5>
          <h5> <%=  current_user.first_name %></h5>
        </div>
      </div>
      <div class="col-md-4 col-sm-12 navdash-b">
        <%= link_to 'Ajouter un produit',new_product_path, class: "btn btn-home" %>
      </div>
    </div>
  </div>
</div>
<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Produit en ligne</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Profil</a>
  </li>
</ul>
<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
    <div class="container list-nav">
      <h3>Mes Produits en ligne (<%= current_user.products.count %>)</h3>
      <% current_user.products.each do |product| %>
      <div class="card-trip">
        <% if product.product_attachments.first.photo.url %>
        <%= cl_image_tag product.product_attachments.first.photo %>
        <% else %>
        <%= image_tag "https://i.ibb.co/cYPRmcc/diamondproduct.jpg" %>
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h2><%= product.element %></h2>
            <p><%= product.description %>.</p>
          </div>
          <div>
            <%= link_to 'Editez Produit',edit_product_path(product), class: "btn btn-contact" %>
            <%= link_to 'Suprimer Produit',product_path(product), method: :delete,  class: "btn btn-contact" %>
          </div>
          <h2 class="card-trip-pricing"> <%= product.price %>€</h2>
          <% if product.user.photo.url %>
          <%= cl_image_tag product.user.photo, class:"card-trip-user avatar-bordered"  %>
          <% else %>
          <img src="https://i.ibb.co/mhL9zjd/user.png" class="card-trip-user avatar-bordered">
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
    <div class="container list-nav">
      <div class="card" style="width: 45rem;">
        <div class="card-body">
          <h5 class="card-title">Information</h5>
          <div class="card-text">
            <p>Prénom</p>
            <p>Nom</p>
            <p> Nom de la société</p>
            <p> Numéro de Siret</p>
            <p>Email</p>
            <p>Numéro de telephone</p>
            <p>Service</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">...</div>
</div>
