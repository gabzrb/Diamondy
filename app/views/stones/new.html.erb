<%= simple_form_for(@stone, as: :stone, method: :post, url: product_stones_path(@product)) do |f| %>
  <%= f.error_notification %>

  <%= f.input :size %>
  <%= f.input :category %>
  <%= f.input :weight %>
  <%= f.input :color %>
  <%= f.input :purity %>
  <%= f.input :certificate %>
  <%= f.button :submit %>


<% end %>
