
<div class="container">
  <div class="row">
  <div class=" col col-xs-12 col-lg-12">
    <div class="contactcard text-center">
<h1>Ajouter une fiche produit</h1>




<%= simple_form_for @product do |f| %>


    <div class="form-row">
    <div class="col col-xs-12 col-md-6">
      <%= f.input :element, label: 'Type de produit', collection: ["jewel", "stone", "watch", "special_request"] %>
    </div>
     <div class="col col-xs-12 col-md-6">
        <%= f.input :price, label: 'Prix' %>
     </div>

  <div class=" col col-xs-12 col-md-12">
    <%= f.input :description, label:'Nom du produit' %>
  </div>



 <div class="col col-xs-12 col-md-12">
   <%= f.fields_for :product_attachment do |p| %>
     <div class="field">
       <%= p.label :photo %><br>
       <%= p.file_field :photo %>
     </div>
   <% end %>

 </div>


   <div class="form-actions col col-xs-4 col-md-12">
  <%= f.submit "Valider" , class: "btn-contact" %>
</div>
<% end %>

</div>
</div>
</div>
</div>
</div>

